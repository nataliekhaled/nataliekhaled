<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="lstPokemons" HorizontalAlignment="Left" Height="249" Margin="30,32,0,0" VerticalAlignment="Top" Width="170"/>
        <RichTextBox x:Name="txtPokemonInfo" HorizontalAlignment="Left" Height="12" Margin="369,32,0,0" VerticalAlignment="Top" Width="85">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="pokeButton" Content="~ View Your Pokemon ~" HorizontalAlignment="Left" Margin="205,137,0,0" VerticalAlignment="Top" Width="136" Height="27" Click="pokeButton_Click"/>
        <Image x:Name="pokeImageB" HorizontalAlignment="Left" Height="187" Margin="379,84,0,0" VerticalAlignment="Top" Width="111"/>

    </Grid>
</Window>
